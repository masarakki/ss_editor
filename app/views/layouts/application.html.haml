!!! 5
%html
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %title= "SS park"
    = csrf_meta_tags
    = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/favicon.ico" rel="shortcut icon")


  %body
    %nav(role="navigation")
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to "SS park", root_path, :class => 'brand'
            .container.nav-collapse
              %ul.nav
                %li= link_to 'stories', :stories
                %li= link_to 'characters', :characters
              %ul.nav.pull-right
                - if user_signed_in?
                  %li= link_to current_user.name, :dashboard
                  %li= link_to 'ダッシュボード', :dashboard
                  %li= link_to 'ログアウト', :logout
                - else
                  %li
                    %strong ログインしていません
                  %li= link_to 'ログイン', user_omniauth_authorize_path(:google)

    .container
      .content
        .row
          #main
            = bootstrap_flash
            = yield


    %footer
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
