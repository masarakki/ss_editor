<h1>Listing dialogs</h1>
 
<ul id="dialogs">
  <% @dialogs.each do |dialog| %>
    <li id="dialog_<%= dialog.id %>">
      <%= dialog.message %>
    </li>
  <% end %>
</ul>

<%= sortable_element :dialogs, :url => [:update_orders, @story, :dialogs], :method => :put %>

<table>
  <tr>
    <th>line</th>
    <th>キャラクター</th>
    <th>顔</th>
    <th>セリフ</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <% @dialogs.each do |dialog| %>
    <tr>
      <td><%= dialog.line_num %></td>
      <td><%= dialog.character.name %></td>
      <td><%= dialog.face.name %></td>
      <td><%= dialog.message %></td>
      <td><%= link_to 'Show', [@story, dialog] %></td>
      <td><%= link_to 'Edit', [:edit, @story, dialog] %></td>
      <td><%= link_to 'Destroy', [@story, dialog], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Dialog', [:new, @story, :dialog] %>
