<%= form_for(@story) do |f| %>
  <%= f.error_messages %>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.check_box :hidden %>
    <%= f.label :hidden, "非公開にする" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
